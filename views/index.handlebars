<div class="row">
    <div class="col s6">
        <center>
            <h2> Pick a burger you would like to devour?</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <h5>{{burger_name}}</h5><a class="btn devourButton" data-id={{id}}>DEVOUR!</a>
                {{/unless}}
                {{/each}}
            </ul>

        </center>
    </div>


    <div class="col s6">
        <center>
            <h2>Just devoured</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <h5>{{burger_name}}</h5>
                {{/if}}
                {{/each}}
            </ul>
        </center>
    </div>
</div>

<div class="row">
    <div class="col s12">
        <center>
            <h2>Make your own burger!</h2>

            <p>What is the name of your burger?</p>
            <div class="input-field inline">
                <input id="burgerName" type="input">
                <button type="submit" class="btn addBurger">Add your burger to the menu!</button>

        </center>
    </div>
</div>